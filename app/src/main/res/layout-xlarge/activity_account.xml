<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainPage.AccountActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ConstraintAccount"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/HeaderAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-25dp"
            android:gravity="top|center"
            android:shadowColor="#000000"
            android:background="@drawable/title_bg"
            android:layout_marginBottom="20dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="حساب کاربری"
            android:textColor="#2FEF6F"
            android:textSize="55sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ImageViewBack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ConstraintAccount"
            app:layout_constraintTop_toTopOf="@+id/ConstraintAccount"
            app:layout_constraintVertical_bias="0.6"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/ImageViewAccount"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ConstraintAccount"
            app:layout_constraintTop_toTopOf="@+id/ConstraintAccount"
            app:layout_constraintVertical_bias="0.6"
            tools:ignore="RtlHardcoded" />

    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ConstraintAccount8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewChangeUserNameAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="تغییر نام و نام خانوادگی"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/EditTextLastNameAccount"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:background="#00FFFFFF"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/TextColor"
                        android:layout_margin="5dp"/>

                    <EditText
                        android:id="@+id/EditTextFirstNameAccount"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:background="#00FFFFFF"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ConstraintAccount7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewChangePasswordAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="تغییر رمز عبور"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ChangePasswordAccountButton"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/change_password"
                    android:padding="7dp"
                    android:background="@drawable/white_bg" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ConstraintAccount9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewPhoneNumberTitleAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="شماره همراه"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/TextViewPhoneNumberAccount"
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:background="@drawable/white_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#4D9573"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ConstraintAccount10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewReagentTitleAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="کد دعوت"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/TextViewReagentAccount"
                    android:layout_width="210dp"
                    android:layout_height="80dp"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#4D9573"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ConstraintAccount11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewShareAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="ارسال کد دعوت"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/ShareAccountButton"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/share"
                    android:padding="7dp"
                    android:background="@drawable/white_bg" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ConstraintAccount12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewCityTitleAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="شهر"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextViewCityAccount"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#4D9573"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ConstraintAccount14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewStateTitleAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="استان"
                    android:textAlignment="center"
                    android:textColor="@color/TextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextViewStateAccount"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#4D9573"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ConstraintAccount15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/LogOutAccountButton"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@color/Transparent"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/TextViewLogOutAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="خروج از حساب کاربری"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/CashButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/left_button_bg"
        android:gravity="center"
        android:padding="1dp"
        android:text="موجودی"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/MessageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ConstraintMoney" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ConstraintMoney"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/money"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/CashButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:id="@+id/TextViewMoneyFarsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="۱۰۰۰۰۰"
            android:textAlignment="center"
            android:textColor="#006837"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16000003" />

        <TextView
            android:id="@+id/TextViewMoneyEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10000"
            android:textAlignment="center"
            android:textColor="#006837"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84000003" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/MessageButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/left_button_bg"
        android:gravity="center"
        android:padding="1dp"
        android:text="پیام ها"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LinearMessage"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/message_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MessageButton"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/TextViewTitleMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_message"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/TextViewTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:maxHeight="270dp"
            android:gravity="right|center"
            android:lineSpacingExtra="5dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_message"
            android:textSize="20sp" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>