<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/AD_Image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ad"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/AD_Image">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


            <EditText
                android:id="@+id/FirstNameText"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="10dp"
                android:hint="نام"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/LastNameText"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:hint="نام خانوادگی"
                android:padding="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewState"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"
            android:textColor="@color/TextColor"
            android:text="در انتخاب نام استان و شهر خود دقت فرمایید تا از مزایای شهر خود برخوردار شوید"
            android:textAlignment="center"
            android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/SpinnerState"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/TextViewSpinnerState"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="شهر"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/SpinnerCity"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/TextViewSpinnerCity"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="منطقه"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/PasswordText"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:hint="رمز عبور"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#C1FFFFFF"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextViewPassword"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:text="رمز عبور باید حداقل ۸ کاراکتر باشد"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/RepeatPasswordText"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:inputType="textPassword"
                android:textStyle="bold"
                android:hint="تکرار رمز عبور"
                android:singleLine="true"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="35sp" />

        <EditText
            android:id="@+id/FriendCode"
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:hint="کد دعوت در صورتی که از طریق دوستان دعوت شده اید"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#C1FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />


            <Button
                android:id="@+id/SaveProfileButton"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginBottom="50dp"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:background="@drawable/green_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="ثبت نام نهایی"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

        </LinearLayout>
    </ScrollView>
    
</LinearLayout>