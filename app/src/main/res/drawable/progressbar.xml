<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:endColor="#535554"
                android:startColor="#787D81"
                android:angle="0"
                android:type="linear"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#80ffd300"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:endColor="#0FD74E"
                    android:startColor="#2FFDF8"
                    android:centerColor="#00FD92"
                    android:angle="0"
                    android:type="linear"
                    />
            </shape>
        </clip>
    </item>

</layer-list>