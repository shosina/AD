<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/AD_Image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ad"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/AD_Image">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/FirstNameText"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="10dp"
                android:hint="نام"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/LastNameText"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:hint="نام خانوادگی"
                android:padding="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/SpinnerState"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/TextViewSpinnerState"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="شهر"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/SpinnerCity"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/TextViewSpinnerCity"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="منطقه"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/PasswordText"
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:hint="رمز عبور"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#C1FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextViewPassword"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:text="رمز عبور باید حداقل ۸ کاراکتر باشد"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/RepeatPasswordText"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:inputType="textPassword"
                android:textStyle="bold"
                android:hint="تکرار رمز عبور"
                android:singleLine="true"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#C1FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/FriendCode"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:hint="از طریق دوستان دعوت شده ام"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/SaveProfileButton"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/green_bg"
                android:gravity="center"
                android:singleLine="true"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                android:text="ثبت نام نهایی"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>